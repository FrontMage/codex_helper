{
  "name": "smartedu-recorder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "record": "node tools/record.js",
    "run:simple": "node tools/simple-runner.js",
    "run:manual": "node tools/simple-runner-manual.js",
    "gui": "electron electron/main.js",
    "dist:win": "electron-builder --win --x64 --publish never"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "puppeteer-core": "^22.14.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "electron": "^30.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.frontmage.codexhelper",
    "productName": "SmartEdu Runner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "renderer/**",
      "tools/**",
      "package.json"
    ],
    "mac": {
      "target": ["dir"]
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
